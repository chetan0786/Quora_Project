<body>
	
	<%- include('partials/header'); -%>

	<div class="container " >
<h1 style="text-align: center"> Latest News </h1>
    <div class="row" id="addhere" style="margin: 6px">
      
    </div>

  </div>


</body>

	 <script
  src="https://code.jquery.com/jquery-3.2.1.js"
  integrity="sha256-DZAnKJ/6XZ9si04Hgrsxu/8s717jcIzLy3oi35EouyE="
  crossorigin="anonymous">
  </script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.100.2/js/materialize.min.js"></script>
  <script>
    $(document).ready(() => {
      $('.button-collapse').sideNav();
    });



    fetch('http://newsapi.org/v2/top-headlines?country=in&apiKey=e873e44ea64140bab36c382198813b1c')
    .then(response=> response.json())
    .then((data)=>
    {
      var d=data.articles;

      var add=document.getElementById('addhere');

      d.map((value,index)=>
      {
        if(value.urlToImage)
        {
        var card=document.createElement('div');
        card.setAttribute('class','card mx-auto mt-3 ml-5');
         card.setAttribute('style','width:400px');
         var img=document.createElement('img');
         img.setAttribute('class','card-img-top');
         img.setAttribute('src',value.urlToImage);
         img.setAttribute('style','width:100%');
         card.appendChild(img);

         var body=document.createElement('div');
         body.setAttribute('class','card-body');
         var h3=document.createElement('h3');
         h3.setAttribute('class','card-title');
         h3.innerHTML=value.title;
         body.appendChild(h3);

         var a=document.createElement('a');
         a.setAttribute('href',value.url);
         a.setAttribute('class','btn btn-primary');
         a.setAttribute('target','_blank');
         a.innerHTML="Check News";
         body.appendChild(a);
         card.appendChild(body);
         add.appendChild(card);


       }


      })
    })



  </script>


  </html>