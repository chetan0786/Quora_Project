<!DOCTYPE html>
<!DOCTYPE html>
<head>
	<meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.100.2/css/materialize.min.css">
  <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" integrity="sha384-wvfXpqpZZVQGK6TAh5PVlGOfQNHSoD2xbE+QkPxCAFlNEevoEH3Sl0sibVcOQVnN" crossorigin="anonymous">
    <title>Storybooks</title>
</head>

<body style="background:#eee">
     <%- include('./../partials/header'); -%>
    
    
    <main>
   <div class = "container">
<%
formatDate= function(date, format){
    return moment(date).format(format);
  }
%>

<div class="row">
  <div class="col s12 m8">
    <h3><%= story.title%></h3>
    <div class="card story">
      <div class="card-content">
        <span class="card-title"><%= formatDate(story.date ,'MMMM Do YYYY') %></span>
        <%-
                     story.body
           
        %>
      </div>
    

       

  </div>
   </div>  

  <div class="col s12 m3 mt-2">
    <div class="card center-align">
      <div class="card-content">
        <span class="card-title"><%= story.username%></span>
        <img src="<%= story.author.image%>" style="height: 100px;" class="circle responsive-img">
      </div>
      <div class="card-action">
        <a href="/stories/user/<%= story.userid%>">More From <%= story.username%></a>
      </div>
    </div>
  </div>
</div>
       
       <div class="row">
  <div class="col s12 m8">
        
    <div id="rowfeedback">
        <style>
            
            #rowfeedback {
                display:flex;
            
                justify-content:center;
                align-items:center;
                min-height:50px;
                background:#20152D;
            }
            .rating{
                align-self: baseline;
                margin-top: 10px;

                position:absolute;
                
                flex-direction:row;
            }
            .rating label img{
                height:30px;
            }
            .rating input{
                display:none;
                margin-left:20px;
            }
            .rating label{
                filter:grayscale(1);
                width:70px;
                opacity:0.2;
                
            }
            .rating:hover label{
                width:70px;
                opacity:0.2;
                
            }
            
            .rating label h4{
                color:#fff;
                font-size:24px;
                padding-top:10px;
                font-weight:500;
                white-space:nowrap;
                opacity:0;
                transform:translateY(-50px) scale(0);
                transition:0.5s;
            }
            .rating input:hover + label,
            .rating input:checked + label{
                filter:grayscale(0);
                width:70px;
                opacity:1;
                
            }
            
             .rating input:hover + label h4,
            .rating input:checked + label h4{
                opacity:0;
                transform:translateY(0) scale(1);
                
                
            }
            
        </style>
  
          
            <% if(user) { %>
            <div class="rating">
          
           
                
                <input type=radio name="star" id = "star5">
                <label for="star5">
                    <img  src="/smiley/1.png">
                    <h4>WORST</h4>
                </label>
                
                
                
                <input style="display:none;"type=radio name="star" id = "star4">
                <label for="star4">
                    <img src="/smiley/2.png">
                    <h4>BAD</h4>
                </label>
                
                 
                
                <input type=radio name="star" id = "star3" >
                <label for="star3">
                    <img src="/smiley/3.png">
                    <h4>GOOD</h4>
                </label>
                
                 <input type=radio name="star" id = "star2">
                <label for="star2">
                    <img src="/smiley/4.png">
                    <h4>LIKED</h4>
                </label>
               
                  <input type=radio name="star" id = "star1">
                <label for="star1">
                    <img src="/smiley/5.png">
                    <h4>LOVED</h4>
                </label>
                
                
            </div>
             
            <%}%>
          
    
    </div>
           </div>
       </div>
        
    
       
       
  <% if(story.allowComments) { %>
  <div class="row">
  <div class="col s12 m8">
          <div class="card">
        <div class="card-content">
            
            
            
            
            
            
            
            
          <span class="card-title">Comments</span>
            <% if(user) { %>
            <form method="post" action="/stories/comment/<%= story._id%>">
              <div class="input-field">
                <textarea name="commentBody" class="materialize-textarea"></textarea>
                <label> Add Comment</label>
              </div>
              <input type="submit" value="Submit" class="btn">
            </form>
          </div>
        </div>
      </div>
    </div>
            <% }else{ %>
            <p>Please <a href="/auth/google">log</a> in to leave a comment</p>
            <% } %>

         <% }  %>
       <div class="row">
  <div class="col s12 m8">
       <% story.comments.map((value,index)=>{ %>
        <div class="card">
          <div class="card-content">
            <h5><%= value.commentBody %></h5>
            <div class="chip">
              <img src= "<%= value.commentUser.image %>">
              <%= value.commentUser.name %>
            </div>
            <br>
            <small> <%= formatDate(value.commentDate ,'MMMM Do YYYY') %> </small>
          </div>
        </div>
      <% }) %>
</div>
</div>

    </main>
    <%- include('./../partials/footerForStories'); -%>
</body>
 <script
  src="https://code.jquery.com/jquery-3.2.1.js"
  integrity="sha256-DZAnKJ/6XZ9si04Hgrsxu/8s717jcIzLy3oi35EouyE="
  crossorigin="anonymous">
  </script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.100.2/js/materialize.min.js"></script>

<script>
    
     $(document).ready(() => {
      $('.button-collapse').sideNav();
       $('select').material_select();
    });
</script>
</html>

