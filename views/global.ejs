    <title>Storybooks</title>
</head>
<body>
	
	<%- include('partials/header'); -%>

	 <div class="container">
    <h1 style="text-align: center"> Global Activity </h1>
    &nbsp;
    &nbsp;

    <h2> Recents Stories </h2>
    &nbsp;
    <%alldata.sort((a,b) => (a.date < b.date) ? 1 : ((b.date < a.date) ? -1 : 0)) %>
    <ul class="list-group">
    <%alldata.forEach(function(value){%>

    <% if(count>25) { return; }%>



    <% if(count%2==0){ %>
    <a href="/stories/show/<%= value.storyid %>" style="text-decoration: none;color:black;" class="list-group-item">
      <%}else{ %>
      <a href="/stories/show/<%= value.storyid %>" style="text-decoration: none;color:black;" class="list-group-item ">
        <% } %>

        <% count++ %>

       <h5>
        <% if(value.authorid==user) { %>

       
        <div class="d-flex justify-content-between">
        <div class="btn btn-danger"> <%=value.storyname %> </div>

        
           <div class="chip " style="float:center" > You </div>
           <div class="btn btn-outline-success" style="float:right"> Read </div> 
           </div> 
        <% }else{ %>
        
         <div class="d-flex justify-content-between">
        <div class="btn btn-danger"> <%=value.storyname %> </div>

        
           <div class="chip"> <%= value.authorname %> </div>
           <div class="btn btn-outline-success" style="float:right"> Read </div>    
</div>
               <%}%>

         
     </h5>
     

   
   </a>
    <%})%>
  </ul>
   </div>

 <%- include('./partials/footerForStories'); -%>
</body>
