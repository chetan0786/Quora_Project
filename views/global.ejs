    <title>Storybooks</title>
</head>
<body>
	
	<%- include('partials/header'); -%>

	 <div class="container">
    <h1 style="text-align: center"> Global Activity </h1>
    &nbsp;
    &nbsp;
    <%alldata.sort((a,b) => (a.date < b.date) ? 1 : ((b.date < a.date) ? -1 : 0)) %>
    <ul class="list-group">
    <%alldata.forEach(function(value){%>

    <% if(count>25) { return; }%>



    <% if(count%2==0){ %>
    <a href="/stories/show/<%= value.storyid %>" style="text-align:center;font-size: 20px;color:black;font-weight: bold" class="list-group-item-success">
      <%}else{ %>
      <a href="/stories/show/<%= value.storyid %>" style="text-align:center;font-size: 20px;color:black;font-weight: bold" class="list-group-item list-group-item-info">
        <% } %>

        <% count++ %>

        <h4>
      
        <% if(value.authorid==user) { %>
        You Added A New Story <%=value.storyname %>
        <% }else{ %>
        <%= value.authorname %> Added a New Story <%=value.storyname %>
        <%}%>
     
     </h4>

   
   </a>
    <%})%>
  </ul>
   </div>

